{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"seed": "ts-node -r tsconfig-paths/register src/database/seed.command.ts seed",
		"seed:clear": "ts-node -r tsconfig-paths/register src/database/seed.command.ts clear",
		"seed:reset": "ts-node -r tsconfig-paths/register src/database/seed.command.ts reset"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/platform-fastify": "^11.1.7",
		"@nestjs/swagger": "^11.2.1",
		"@nestjs/typeorm": "^11.0.0",
		"bcrypt": "^6.0.0",
		"better-sqlite3": "^12.4.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"fastify": "^5.6.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"sqlite3": "^5.1.7",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.27"
	},
	"devDependencies": {
		"@fastify/static": "^8.3.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/bcrypt": "^6.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"jest": "^30.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
